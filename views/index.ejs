<%- include("header") -%>
    <div class="container py-5 h-100">
        <div class="d-flex justify-content-center p-5">
            <h1 class="mt-4">
                <%= listTitle%>
            </h1>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col col-xl-10">

                <div class="card">
                    <div class="card-body p-5">

                        <form class="d-flex justify-content-center align-items-center mb-4" action="/" method="POST">
                            <div class="form-outline flex-fill">
                                <h6 class="float-end">
                                    <%=date%>
                                </h6>
                                <label class="form-label" for="form2">New task</label>
                                <input type="text" id="form2" name="task" class="form-control" name="listItem"
                                    placeholder="Enter Here..." required />
                            </div>
                            <button type="submit" name="list" class="btn btn-info ms-2" id="butmarg"
                                value="<%=listTitle %>">+</button>
                        </form>

                        <!-- Tabs content -->
                        <div class="tab-content" id="ex1-content">
                            <% for (var i=0; i < newListItems.length ; i++) { %>
                                <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel"
                                    aria-labelledby="ex1-tab-1">
                                    <ul class="list-group mb-0">
                                        <li class="list-group-item d-flex align-items-center border-0 mb-0"
                                            style="background-color: #f4f6f7;">
                                            <form method="post" action="/delete">
                                                <input class="form-check-input me-2" type="checkbox"
                                                    value="<%=newListItems[i].id %>" name="checkbox"
                                                    onChange="this.form.submit()" />
                                                <input type="hidden" name="listName" value="<%=listTitle%>"></input>
                                            </form>
                                            <p class="d-flex mb-1">
                                                <%= newListItems[i].Name %>
                                            </p>
                                        </li>
                                    </ul>
                                </div>
                                <% }%>
                        </div>
                        <!-- Tabs content -->

                    </div>
                </div>

            </div>
        </div>
    </div>
    <%- include("footer") -%>